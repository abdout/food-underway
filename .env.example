# Database
DATABASE_URL="postgresql://user:password@host/database"
DIRECT_URL="postgresql://user:password@host/database"

# Authentication
AUTH_SECRET=your-auth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Main application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
DOMAIN=http://localhost:3000

# Production main app URL
NEXT_PUBLIC_MAIN_APP_URL=https://hc.databayt.org

# Marketing domain configuration
# Main marketing domain (me.databayt.org or ed.databayt.org)
NEXT_PUBLIC_MARKETING_DOMAIN=me.databayt.org

# Enable automatic redirect from ed.databayt.org to me.databayt.org
# false = Both domains work independently (parallel operation)
# true = ed.databayt.org redirects to me.databayt.org (migration active)
ENABLE_DOMAIN_REDIRECT=false

# Root domain for multi-tenant setup
# Local: localhost:3000 | Production: databayt.org
NEXT_PUBLIC_ROOT_DOMAIN=databayt.org

# Default school subdomain for demo/testing
DEFAULT_SCHOOL_DOMAIN=demo

# Allow self-serve school signup from marketing site
ALLOW_SCHOOL_SIGNUP=true

# Resend
RESEND_API_KEY=your-resend-api-key

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key
NEXT_PUBLIC_CLOUDINARY_API_SECRET=your-cloudinary-api-secret
NEXT_PUBLIC_CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ImageKit
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-id

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PLAN_ID=price_id
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PLAN_ID=price_id
NEXT_PUBLIC_STRIPE_ULTRA_MONTHLY_PLAN_ID=price_id
NEXT_PUBLIC_STRIPE_ULTRA_YEARLY_PLAN_ID=price_id

# Plan limits
BASIC_MAX_STUDENTS=100
PREMIUM_MAX_STUDENTS=500
ENTERPRISE_MAX_STUDENTS=2000

# Telegram
TELEGRAM_NOTIFICATIONS_ENABLED=false
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
MEMBERSHIP_SECRETARY_TELEGRAM_CHAT_ID=your-chat-id
MEMBERSHIP_NOTIFICATIONS_CHANNEL=@your_channel_name

# Neon backup
NEON_PROJECT_ID=your-neon-project-id
NEON_API_KEY=your-neon-api-key
ENABLE_BACKUPS=false
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
MAX_BACKUPS=30
BACKUP_NOTIFICATION_EMAIL=admin@school.edu

# Vercel Analytics
VERCEL_ANALYTICS_ENABLED=false

# Custom monitoring API
ENABLE_MONITORING_API=false
MONITORING_API_KEY=your-monitoring-api-key

# Node options
NODE_OPTIONS=--max_old_space_size=4096

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1